@{
    ViewData["Title"] = "Home Page";
}
<h1>
    @ViewBag.Nombre
</h1>
<h3 id="title">Ubicaciones</h3>
<hr />
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==" crossorigin="" />
<script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js" integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew==" crossorigin=""></script>

<div id='map' style="width: 1000px; height: 400px;"></div>
@section Scripts {    
    <script>
        var map = L.map('map').setView([51.5, -0.09], 2);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        var idEstado =  @ViewBag.idEstado;

        if (idEstado > 0) {
            $.ajax({
                url: 'GetAPIUbicaciones/' + idEstado,
                success: function (data) {
                    //console.log(data);
                    $(data).each(function (index, item) {
                        var nombre = item.nombre;
                        var lat = item.latitud;
                        var long = item.longitud;
                        L.marker([lat, long]).bindPopup(" " + nombre + " ").addTo(map);
                    });
                },
            });
        }
    </script>
}